<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookbookXF.MainPage">

    <Grid>
        
        <BoxView x:Name="bdGradient" Scale="4" AnchorX="1" AnchorY="0">
                <BoxView.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#eacda3" Offset="0.1"></GradientStop>
                        <GradientStop Color="#FF8C00" Offset="0.5"></GradientStop>
                        <GradientStop Color="#d6ae7b" Offset="1.0"></GradientStop>
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <Grid Padding="10" ColumnSpacing="0" RowSpacing="0">
            <Label Text="Secret Recipe" FontSize="50" HorizontalTextAlignment="Center" BackgroundColor="#e3c099"/>

            <Button Grid.Row="1" Grid.Column="0"  WidthRequest="50" HeightRequest="150"
                FontSize="30" Text="Breakfast"/>
                <Button Grid.Row="1" Grid.Column="1" WidthRequest="50" HeightRequest="150"
                FontSize="30" Text="Lunch"/>
                <Button Grid.Row="2" Grid.Column="0" WidthRequest="50" HeightRequest="150"
                FontSize="30" Text="Snacks"/>
                <Button Grid.Row="2" Grid.Column="1" WidthRequest="50" HeightRequest="150"
                FontSize="30" Text="Dinner"/>
            </Grid>
        </Grid>


</ContentPage>
