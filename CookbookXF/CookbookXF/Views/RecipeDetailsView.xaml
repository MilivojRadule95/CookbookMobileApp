<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:CookbookXF.ViewModels"
             x:Class="CookbookXF.View.RecipeDetailsView"
             x:DataType="viewmodels:RecipeDetailsViewModel"
             >
    <Grid ColumnSpacing="5">
        <StackLayout>
            <Label Text="{Binding Title}"
               Padding="0,20,0,0"
               HorizontalOptions="CenterAndExpand"
               HorizontalTextAlignment="Center"
               FontSize="Body"/>
            <Label Text="{Binding LongDescription}"
               Padding="0,50,0,0"
               HorizontalOptions="CenterAndExpand"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal"
                     Margin="0,200,0,0"
                     HorizontalOptions="Center">

            <Button Style="{StaticResource Buttons}"
                    Text="Ingredients"
                    Clicked="Button_Clicked"/>
            <Button Style="{StaticResource Buttons}"
                    Text="Steps"
                    Clicked="Button_Clicked_1"/>

        </StackLayout>


        <Frame BorderColor="Black"
               CornerRadius="7"
               HasShadow="True"
               Margin="0,300,0,0"
               IsVisible="true"
               x:Name="Ingredients">
            <StackLayout>
                <ListView ItemsSource="{Binding IngredientsSource}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:IngridientsViewModel">
                            <ViewCell>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding Name}"/>
                                    <Label Text="{Binding Amount}"/>
                                    <Label Text="{Binding Unit}"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </Frame>

        <Frame BorderColor="Black"
               CornerRadius="7"
               HasShadow="True"
               Margin="0,300,0,0"
               IsVisible="false"
               x:Name="Steps">
            <StackLayout>
                <ListView ItemsSource="{Binding StepsSource}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:StepsViewModel">
                            <ViewCell>
                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding Text}"/>
                                    <Image Source="{Binding Image}"
                                           BackgroundColor="Transparent"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </Frame>
    </Grid>
  
</ContentPage>