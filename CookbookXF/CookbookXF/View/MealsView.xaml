        <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Center">
            <StackLayout>
                <Button 
                    x:Name="Breakfast" 
                    Text="Breakfast" 
                    BackgroundColor="Red"
                    Command="{Binding OpenListOfDishes}"
                    CommandParameter="Breakfast"/>
                <Button 
                    x:Name="Snack" 
                    Text="Snack" 
                    BackgroundColor="Blue"
                    Command="{Binding OpenListOfDishes}"
                    CommandParameter="Snack"/>
            </StackLayout>

            <StackLayout>
                <Button 
                    x:Name="Lunch" 
                    Text="Lunch" 
                    BackgroundColor="Black"
                    Command="{Binding OpenListOfDishes}"
                    CommandParameter="Lunch"/>
                <Button 
                    x:Name="Dinner" 
                    Text="Dinner" 
                    BackgroundColor="BlanchedAlmond"
                    Command="{Binding OpenListOfDishes}"
                    CommandParameter="Dinner"/>
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>