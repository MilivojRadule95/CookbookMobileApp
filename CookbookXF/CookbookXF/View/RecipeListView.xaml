<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookbookXF.View.RecipeListView"
             xmlns:viewmodel1="clr-namespace:CookbookXF.ViewModels"
             x:DataType="viewmodel1:RecipeListViewModel">

    <StackLayout>
        
    </StackLayout>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Text="RADI PLS" FontSize="100" HorizontalTextAlignment="Center"/>
        <CollectionView SelectionMode="Single"
                    ItemsSource="{Binding SelectedRecipe}"
                    SelectedItem="{Binding RecipeSource}"
                    >
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="viewmodel1:RecipeListViewModel">
                <StackLayout Padding="15">
                    <Label FontSize="30" LineBreakMode="TailTruncation" MaxLines="2" Text="edfd"/>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        
      </CollectionView>
    </Grid>

</ContentPage>