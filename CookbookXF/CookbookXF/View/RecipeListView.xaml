<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookbookXF.View.RecipeListView"
             xmlns:viewmodel1="clr-namespace:CookbookXF.ViewModels"
             x:DataType="viewmodel1:RecipeListViewModel"
             BackgroundImageSource="bg.png">

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <CollectionView SelectionMode="Single"
                    ItemsSource="{Binding RecipeSource}"
                    SelectedItem="{Binding SelectedRecipe}"
                        SelectionChangedCommand="{Binding OpenRecipeDetails}">
            <CollectionView.Header>
                <Grid  Padding="10">
                    <Label Margin="170,30,50,50"
                           FontSize="35"
                           FontAttributes="Bold" 
                           Text="" />

                    <ImageButton Source="back.png" 
                                 HorizontalOptions="Start" 
                                 BackgroundColor="Transparent"
                                 WidthRequest="100"
                                 HeightRequest="100"
                                 Margin="0"/>
                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="viewmodel1:RecipeItemViewModel">
                    <StackLayout Padding="15">
                        
                        <Label FontSize="22" 
                               HorizontalTextAlignment="Center" 
                               FontAttributes="Bold" 
                               LineBreakMode="TailTruncation" 
                               MaxLines="2" 
                               Text="{Binding Title}"/>
                        <Label FontSize="15" 
                               HorizontalTextAlignment="Center" 
                               Text="{Binding ShortDescription}"/>
                        <Image  Source="{Binding ThumbNailImage}" 
                                BackgroundColor="Transparent"/>
                    </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        
      </CollectionView>
        
    </Grid>

</ContentPage>